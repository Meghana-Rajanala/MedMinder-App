<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradient_6"
    tools:context=".NotificationDetailsActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="30dp"

        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/white_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification Details"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/purple_700"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Medicine Name"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:drawablePadding="8dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/medicineName"
                android:background="@drawable/white_background"
                android:layout_marginTop="20dp"
                android:hint="MedicineName"
                android:textAlignment="center"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Medicine Time"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:drawablePadding="8dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/medicineTime"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_background"
                android:hint="MedicineTime"
                android:textAlignment="center"
                android:padding="8dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Medicine Before or After Meal"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:drawablePadding="8dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/medicineStatus"
                android:background="@drawable/white_background"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="MedicineStatus"
                android:textAlignment="center"
                android:drawablePadding="8dp"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Details"
                android:backgroundTint="@color/purple_700"
                android:id="@+id/nextbutton"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                app:cornerRadius = "20dp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>